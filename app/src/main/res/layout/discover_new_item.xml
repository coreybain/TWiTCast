<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/discoverNewCoverImage"
        android:src="@drawable/placeholder"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TWiT Episode Title"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"
        android:id="@+id/discoverNewEpisodeLabel"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/discoverNewCoverImage"
        android:layout_toEndOf="@+id/discoverNewCoverImage"
        android:layout_toStartOf="@+id/discoverNewPlayBtn"
        android:layout_toLeftOf="@+id/discoverNewPlayBtn"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TWiT Show Title"
        android:textSize="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#B2B2B2"
        android:layout_toStartOf="@+id/discoverNewPlayBtn"
        android:layout_toLeftOf="@+id/discoverNewPlayBtn"
        android:id="@+id/discoverNewShowLabel"
        android:layout_below="@+id/discoverNewEpisodeLabel"
        android:layout_alignLeft="@+id/discoverNewEpisodeLabel"
        android:layout_alignStart="@+id/discoverNewEpisodeLabel"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/discoverNewPlayBtn"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/discoverNewEpisodeLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>